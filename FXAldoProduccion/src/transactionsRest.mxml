					<s:TextInput id="txtTicket" x="263" y="210" focusOut="if(txtTicket.text.length > 0) txtTicket.errorString='';validaOp();" tabIndex="3" change="txtExisteOP.text=''; txtMonto.text=''" width="100"/>
					<s:ComboBox id="cmbSucursal" x="93" y="159" width="388" creationComplete="Send(1380);" itemRenderer="renderTransactionRest" focusOut="if(cmbSucursal.selectedIndex != 0) cmbSucursal.errorString='';" change="cleanCtrls()" tabIndex="1"/>
					<s:ComboBox id="cmbConceptos" x="95" y="209" width="150" creationComplete="Send(687);" focusOut="if(cmbConceptos.selectedIndex != 0) cmbConceptos.errorString=''; conceptoInsert();" change="conceptoInsert();" tabIndex="2"/>
					
				</s:Group>
